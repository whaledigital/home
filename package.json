{
  "name": "whale-digital",
  "version": "1.0.0",
  "description": "Whale Digital",
  "author": "Artem Kashin <tema@whale.digital>",
  "license": "MIT",
  "scripts": {
    "start": "gatsby develop",
    "develop": "gatsby develop",
    "build": "gatsby build",
    "lint": "npm run lint:ts && npm run lint:md && npm run lint:js && npm run lint:css",
    "lint:ts": "tslint \"./src/**/*.ts\" \"./src/**/*.tsx\" --project tsconfig.json",
    "lint:md": "remark .",
    "lint:js": "xo",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:scss": "stylelint src/**/*.scss --syntax scss",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "generate": "plop --plopfile ./generators/plopfile.js",
    "graphql-types": "gql-gen",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o public/docs",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info"
  },
  "dependencies": {
    "aos": "^3.0.0-beta.6",
    "change-case": "^3.1.0",
    "classnames": "^2.2.6",
    "gatsby": "^2.0.111",
    "gatsby-image": "^2.0.29",
    "gatsby-link": "^2.0.10",
    "gatsby-plugin-google-analytics": "^2.0.13",
    "gatsby-plugin-i18n": "^1.0.1",
    "gatsby-plugin-manifest": "^2.0.17",
    "gatsby-plugin-netlify": "^2.0.10",
    "gatsby-plugin-offline": "^2.0.22",
    "gatsby-plugin-react-svg": "^2.0.0",
    "gatsby-plugin-robots-txt": "^1.4.0",
    "gatsby-plugin-sass": "^2.0.10",
    "gatsby-plugin-sharp": "^2.0.20",
    "gatsby-plugin-sitemap": "^2.0.5",
    "gatsby-plugin-typescript": "^2.0.6",
    "gatsby-plugin-typography": "^2.2.7",
    "gatsby-remark-autolink-headers": "^2.0.13",
    "gatsby-remark-copy-linked-files": "^2.0.9",
    "gatsby-remark-images": "^3.0.3",
    "gatsby-source-contentful": "^2.0.29",
    "gatsby-source-filesystem": "^2.0.20",
    "gatsby-transformer-json": "^2.1.8",
    "gatsby-transformer-remark": "^2.2.3",
    "gatsby-transformer-sharp": "^2.1.13",
    "graphql-code-generator": "^0.16.0",
    "intl": "^1.2.5",
    "node-sass": "^4.11.0",
    "ptz-i18n": "^1.0.0",
    "react": "16.8.0-alpha.0",
    "react-dom": "16.8.0-alpha.0",
    "react-dropzone": "^8.1.0",
    "react-helmet": "5.2.0",
    "react-intl": "^2.8.0",
    "react-redux": "^6.0.0",
    "react-slick": "^0.23.2",
    "react-typography": "^0.16.18",
    "slash": "^2.0.0",
    "slick-carousel": "^1.8.1",
    "three": "^0.101.1",
    "ts-loader": "^5.3.3",
    "typescript": "^3.2.4",
    "typography": "^0.16.18",
    "validate.js": "^0.12.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.1.11",
    "@storybook/addon-knobs": "^4.1.11",
    "@storybook/addon-notes": "^4.1.11",
    "@storybook/addon-options": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "@types/aos": "^3.0.0",
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "^3.1.16",
    "@types/intl": "^1.2.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.19",
    "@types/reach__router": "^1.2.3",
    "@types/react": "^16.7.22",
    "@types/react-dom": "^16.0.11",
    "@types/react-helmet": "5.0.8",
    "@types/react-intl": "^2.3.17",
    "@types/react-redux": "^7.0.1",
    "@types/react-slick": "^0.23.3",
    "@types/react-test-renderer": "^16.0.3",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-knobs": "^4.0.0",
    "@types/storybook__addon-notes": "^4.0.1",
    "@types/storybook__addon-options": "^4.0.0",
    "@types/storybook__react": "^4.0.0",
    "@types/three": "^0.93.19",
    "@types/typography": "^0.16.2",
    "@types/webpack-env": "^1.13.6",
    "babel-eslint": "^10.0.1",
    "codeclimate-test-reporter": "^0.5.1",
    "dotenv": "^6.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "eslint": "^5.12.1",
    "eslint-config-react-app": "^3.0.6",
    "eslint-config-xo-react": "0.18.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-react": "^7.12.4",
    "flat": "^4.1.0",
    "gatsby-plugin-root-import": "^2.0.5",
    "graphql-codegen-typescript-client": "^0.16.1",
    "graphql-codegen-typescript-common": "^0.16.1",
    "graphql-codegen-typescript-server": "^0.16.1",
    "husky": "1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.0.0",
    "lint-staged": "8.1.1",
    "mkdirp": "^0.5.1",
    "plop": "^2.2.0",
    "raw-loader": "^1.0.0",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "16.8.1",
    "redux-devtools-extension": "^2.13.7",
    "remark-cli": "^6.0.1",
    "remark-preset-lint-recommended": "^3.0.2",
    "source-map-loader": "^0.2.4",
    "storybook-readme": "^4.0.5",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "ts-jest": "23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-react": "^3.6.0",
    "xo": "^0.24.0"
  },
  "resolutions": {
    "terser": "3.16.1"
  },
  "keywords": [
    "whale",
    "digital"
  ],
  "jest": {
    "globals": {
      "__LINK_PREFIX__": "",
      "__PREFIX_LINKS__": ""
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/templates/",
      "/.cache"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "xo --fix",
      "git add"
    ],
    "*.md": [
      "remark -o",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint"
    ]
  },
  "xo": {
    "extends": "xo-react/space",
    "prettier": true,
    "space": true,
    "rules": {
      "object-curly-spacing": [
        2,
        "always"
      ],
      "comma-dangle": [
        "error",
        "only-multiline"
      ],
      "no-case-declarations": 0,
      "default-case": 0
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      [
        "remark-lint-list-item-indent",
        false
      ]
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
      "**/*.tsx"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "selector-pseudo-class-no-unknown": null
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
